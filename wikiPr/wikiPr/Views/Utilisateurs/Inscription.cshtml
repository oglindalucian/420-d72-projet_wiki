@model wikiPr.Models.Utilisateur
@using wikiPr.Models
@{
    ViewBag.Title = "Inscription";
    Layout = "~/Views/Shared/Layout.cshtml";

    string str = "";
    string senregistrer = "S'enregistrer";
    string accueil = "Accueil";
    string prenom = "Prénom";
    string famille = "Nom de famille";
    string courriel = "Adresse de courriel";
    string mdp = "Mot de passe";
    string langue = "Langue";

    try {
        str = Request.ServerVariables["HTTP_ACCEPT_LANGUAGE"];
        Utilisateur u = Utilisateurs.FindByCourriel(User.Identity.Name);
        if (User.Identity.IsAuthenticated && u != null) { str = u.Langue; }
    }
    catch { str = "fr"; }

    if (str.IndexOf("en") != -1) {
        senregistrer = "Sign up";
        accueil = "Home";
        prenom = "First name";
        famille = "Last name";
        courriel = "Email address";
        mdp = "Password";
        langue = "Language";
    }
    if (str.IndexOf("es") != -1) {
        senregistrer = "Regístrate";
        accueil = "Recepción";
        prenom = "Nombre de pila";
        famille = "Apellido";
        courriel = "Correo electrónico";
        mdp = "Contraseña";
        langue = "Lengua";
    }
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })       
        <div class="form-group">
            @*@Html.LabelFor(model => model.Prenom, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @*@wikiPr.Ressource.ResourceView.Prenom*@
            @Html.Label(@prenom)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NomFamille, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @*@wikiPr.Ressource.ResourceView.NomFamille*@
            @Html.Label(@famille)
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomFamille, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomFamille, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Courriel, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @*@wikiPr.Ressource.ResourceView.Courriel*@
            @Html.Label(@courriel)
             <div class="col-md-10">
                @Html.EditorFor(model => model.Courriel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Courriel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.MDP, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @*@wikiPr.Ressource.ResourceView.MDP*@
            @Html.Label(@mdp)
            <div class="col-md-10">
                @Html.EditorFor(model => model.MDP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MDP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Langue, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @*@wikiPr.Ressource.ResourceView.Langue*@
            @Html.Label(@langue)
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Langue, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownList("Langue", new List<SelectListItem> {
                new SelectListItem {Text="francais", Value="fr", Selected=true},
                new SelectListItem {Text="espagnol", Value="es"},
                new SelectListItem {Text="anglais", Value="en"} })
                
                 @Html.ValidationMessageFor(model => model.Langue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@senregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(@accueil, "index", "home")
</div>
