@model wikiPr.Models.Utilisateur
@using wikiPr.Models

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/Layout.cshtml";

    string str = "";
    string francais = "français";
    string anglais = "anglais";
    string espagnol = "espagnol";
    string save = "Sauvegarder";
    string accueil = "Accueil";
    string mmp = "Modifier le mot de passe";

    try {
        str = Request.ServerVariables["HTTP_ACCEPT_LANGUAGE"];
        Utilisateur u = Utilisateurs.FindByCourriel(User.Identity.Name);
        if (User.Identity.IsAuthenticated && u != null) { str = u.Langue; }
    }
    catch { str = "fr"; }

    if (str.IndexOf("en") != -1) {
        francais = "French";
        anglais = "English";
        espagnol = "Spanish";
        save = "Save";
        accueil = "Home";
        mmp = "Change password";
    }

    if (str.IndexOf("es") != -1) {
        francais = "francés";
        anglais = "inglés";
        espagnol = "español";
        save = "Guardar";
        accueil = "Recepción";
        mmp = "Cambiar contraseña";
    }
}

